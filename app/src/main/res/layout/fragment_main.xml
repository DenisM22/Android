<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/myBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >


            <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/myBackground">

            <ImageView
                android:id="@+id/poster"
                android:layout_width="154dp"
                android:layout_height="278dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                        android:layout_width="0dp"
                        android:layout_height="235dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/poster"
                        app:layout_constraintTop_toTopOf="parent">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/genres"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:textSize="12sp"
                                android:text="фантастика, боевик"
                                android:textColor="@color/forChangedText" />

                            <TextView
                                android:id="@+id/title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:text="Матрица"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/originalTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="The Matrix"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tagline"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="«Добро пожаловать в реальный мир»"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:textSize="11sp"
                                    android:paddingEnd="12dp"
                                    android:text="Год производства"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/releaseDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="11sp"
                                    android:text="1999"
                                    android:textAlignment="center"
                                    android:textColor="@color/forChangedText"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView18"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Продолжительность"
                                    android:textSize="11sp"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/runtime"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="136 мин."
                                    android:textSize="11sp"
                                    android:textAlignment="center"
                                    android:textColor="@color/forChangedText"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </ScrollView>

                    <TextView
                        android:id="@+id/overview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="2dp"
                        android:textSize="14sp"
                        android:text="Жизнь Томаса Андерсона разделена на две части: днём
он самый обычный офисный работник, получающий нагоняи от
начальства, а ночью превращается в хакера по имени Нео, и нет
места в сети, куда он не смог бы дотянуться. Но однажды всё
меняется — герой, сам того не желая, узнаёт страшную правду:
всё, что его окружает — не более, чем иллюзия, Матрица, а люди —
всего лишь источник питания для искусственного интеллекта,
поработившего человечество. И только Нео под силу изменить
расстановку сил в этом ставшем вдруг чужим и страшным мире."
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/poster" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="7dp"
                        app:layout_constraintBottom_toBottomOf="@id/poster"
                        app:layout_constraintEnd_toEndOf="@id/poster"
                        app:layout_constraintHorizontal_bias="0.96"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/poster"
                        app:layout_constraintVertical_bias="0.885">

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/myBackground"
                            android:fontFamily="sans-serif-medium"
                            android:padding="2dp"
                            android:text="16+"
                            android:textColor="@color/white"
                            android:textSize="19sp" />

                    </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/movie_image_view"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp"
                android:paddingVertical="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/overview" />


            <androidx.cardview.widget.CardView
                android:id="@+id/favorites"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="29dp"
                android:layout_marginStart="5dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="10dp"
                android:backgroundTint="@color/white"
                app:layout_constraintStart_toStartOf="@id/poster"
                app:layout_constraintTop_toTopOf="@+id/poster"
                >

                <ImageView
                android:id="@+id/favorites_blank"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="1dp"
                android:layout_gravity="center"
                android:src="@drawable/favorites_blank" />

                <ImageView
                    android:id="@+id/favorites_fill"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center"
                    android:src="@drawable/favorites_fill" />

            </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>


    <include layout="@layout/connection_error" />


</androidx.constraintlayout.widget.ConstraintLayout>